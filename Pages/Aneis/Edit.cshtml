@page
@model AppTeste.Pages.Aneis.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<h4>Anéis</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ring.Id" />
            <div class="form-group">
                <label asp-for="Ring.Nome" class="control-label"></label>
                <input asp-for="Ring.Nome" class="form-control" />
                <span asp-validation-for="Ring.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ring.Poder" class="control-label"></label>
                <input asp-for="Ring.Poder" class="form-control" />
                <span asp-validation-for="Ring.Poder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Ring.Portador" class="control-label"></label>
                <input asp-for="Ring.Portador" class="form-control" />
                <span asp-validation-for="Ring.Portador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Ring.ForjadoPor" class="control-label"></label>
                <input asp-for="Ring.ForjadoPor" class="form-control" />
                <span asp-validation-for="Ring.ForjadoPor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ring.Imagem" class="control-label"></label>
                <input asp-for="Ring.Imagem" class="form-control" />
                <span asp-validation-for="Ring.Imagem" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
