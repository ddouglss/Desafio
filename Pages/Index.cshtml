@page
@model IndexModel
@{
    ViewData["Title"] = "Pagina principal";
}


    <div class="text-center">
        <h1 class="display-4">Bem-vindo</h1>
        <h2>
            Os Anéis do Poder
        </h2>
    </div>

    <div class="row">
        @foreach (var ring in Model.Rings)
        {

        }

    </div>

<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src=" /img/background.png" alt="Primeiro Slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/img/background.png" alt="Segundo Slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/img/background.png" alt="Terceiro Slide">
        </div>
    </div>
</div>

    <div class="row mt-5">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <label asp-for="Ring.Nome" class="control-label"></label>
                 <br />
                <select class="custom-select control-select" id="inputGroupSelect01" asp-for="Ring.Nome" >
                    <option selected>Escolher...</option>
                <option value="Anéis Elfos">Anéis Elfos</option>
                <option value="Anéis Anões">Anéis Anões</option>
                <option value="Anéis Homens">Anéis Homens</option>
                <option value="Anel Sauro">Anel Sauron</option>
                </select>
                <br />
                <div class="form-group">
                    <label asp-for="Ring.Poder" class="control-label"></label>
                    <input asp-for="Ring.Poder" class="form-control" />
                    <span asp-validation-for="Ring.Poder" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Ring.Portador" class="control-label"></label>
                    <input asp-for="Ring.Portador" class="form-control" />
                    <span asp-validation-for="Ring.Portador" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Ring.ForjadoPor" class="control-label"></label>
                    <input asp-for="Ring.ForjadoPor" class="form-control" />
                    <span asp-validation-for="Ring.ForjadoPor" class="text-danger"></span>
                </div>
            <div class="form-group">

                <label asp-for="Ring.Imagem" class="control-label">Imagem</label>
                <input asp-for="Ring.Imagem" class="form-control" hidden />
                <span asp-validation-for="Ring.Imagem" class="text-danger"></span>

                <label for="imagem" class="form-label mt-3">Selecione uma imagem padrão</label>
                <select class="form-select" id="imagem" name="Ring.Imagem">
                    <option selected disabled>Escolha o Anel do Poder...</option>
                    <option value="imagem1">Anéis Elfos</option>
                    <option value="imagem2">Anéis Anões</option>
                    <option value="imagem3">Anéis Homens</option>
                    <option value="imagem3">Anel Sauro</option>
                </select>

                <div id="image-preview" class="mt-3">
                    <img src= "/img/aneis2.png"  alt="Pré-visualização" id="preview-img" class="img-thumbnail" />
                </div>
            </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
  
    </div>

@section Scripts {
    <script>
        const previewImg = document.getElementById('preview-img');
        const selectElement = document.getElementById('imagem');

        const imageUrls = {
            imagem1: "/img/anel1.png",
            imagem2: "/img/anel1.png",
            imagem3: "/img/anel1.png",
            imagem4: "/img/anel1.png"
        };

        selectElement.addEventListener('change', function () {
            const selectedValue = this.value;
            previewImg.src = imageUrls[selectedValue] || "/img/default.png";
        });
    </script>
}